                                <select class="form-select bg-black text-light" id="guests" required>
                                    <option value="">Выберите количество</option>
                                    <option>1-2</option>
                                    <option>3-4</option>
                                    <option>5-6</option>
                                    <option>7-8</option>
                                    <option>8+</option>
                                </select>
                            </div>

