	<script>

		function sendForm(){
			const name = document.getElementById("name").value;
			const phone = document.getElementById("phone").value;
			if(name.length == 0)
				return;

			if(phone.length == 0)
				return;

			let contactForm = document.getElementById("contactForm");


			const url = "/data/sendForm"
			fetch(url, {
				method:"POST",
				headers: {
					'Content-Type': 'application/json;charset=utf-8'
				},
				body: JSON.stringify({
					name: name,
					phone: phone
				})

			})
			.then(resp => resp.json())
			.then(result=> {
					console.log(result);
					if (result.success) {
						//alert('Запись удалена');
						//location.reload();
						contactForm.innerHTML = '<strong>Заявка отправлена</strong>'
					}
					else {
						//todo
						contactForm.innerHTML = '<strong>Ошибка при отправке заявки</strong>'
					}
			})
			.catch(error =>{
				console.log(error);
			})

		}


		function calcDeposit(){
			const t = document.getElementById("deposit_type").value;
			const sum = document.getElementById("sum").value;
			let resultEl = document.getElementById("result");


			const url = "/data/CalcDeposit"
			fetch(url, {
				method:"POST",
				headers: {
					'Content-Type': 'application/json;charset=utf-8'
				},
				body: JSON.stringify({
					sum: sum,
					depositType: t
				})
			})
			.then(resp => resp.json())
			.then(result=> {
					console.log(result);
					if (result.success) {
						//alert('Запись удалена');
						//location.reload();
						resultEl.innerHTML = result.sumInMonth + " руб.";
					}
					else {
						//todo
						resultEl.innerHTML = '<strong>Ошибка при расчете</strong>'
					}
			})
			.catch(error =>{
				console.log(error);
			})

		}


