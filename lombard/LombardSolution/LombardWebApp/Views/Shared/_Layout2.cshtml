<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GoldSafe - Ломбард</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .hero-section {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('./img/main_banner.jpg') center/cover;
            height: 70vh;
            color: white;
        }

        .icon-box {
            width: 60px;
            height: 60px;
        }

        .section {
            padding: 5rem 0;
        }

        .bg-light-gray {
            background-color: #f8f9fa;
        }

        .navFont {
            font-size: 1.5rem;
        }

        .footer-container {
            display: flex; /* Создаем гибкую структуру */
            flex-direction: column; /* Располагаем элементы вертикально */
            min-height: 100vh; /* Минимальная высота равна высоте вьюпорта */
        }

        .myfooter {
            margin-top: auto; /* Здесь вступает в действие магия Flexbox */
        }

    </style>
</head>
<body>
    <!-- Навигация -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top shadow-sm">
        <div class="container ">
            <a class="navbar-brand fw-bold text-warning " style="font-size:2rem" href="/">GoldSafe</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    @{
                        if(User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href='@Url.Action("HomeForManager", "Home")'>Личный кабинет: @User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href='@Url.Action("Logout", "Account")'>Выйти</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item nav-link">&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;</li>
					        <li class="nav-item"><a class="nav-link" href='@Url.Action("Login", "Account")'>Вход для менеджера</a></li>
					        //<li class="nav-item"><a class="nav-link" href='@Url.Action("Register", "Account")'>Регистрация для менеджера</a></li>
                        }
                    }

                </ul>
            </div>

        </div>
    </nav>

    <div class="container" >
        <main role="main" class="pb-3" style="padding-top:20px;">
            @RenderBody()
        </main>
    </div>

    <!-- Футер -->
@*    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <p class="mb-0">© 2023 GoldSafe. Все права защищены</p>
        </div>
    </footer>*@

    <div class="footer-container ">
        <!-- Здесь подразумевается место для содержимого -->
        <footer class="myfooter text-center bg-dark text-white py-4">
            <p class="mb-0">© 2023 GoldSafe. Все права защищены</p>
        </footer>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

